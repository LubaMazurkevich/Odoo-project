<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_action" model="ir.actions.act_window">
        <field name="name">Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">api.group</field>
        <field name="view_mode">kanban,form,tree</field>
    </record>

    <record id="group_form_view" model="ir.ui.view">
        <field name="name">api.group.form</field>
        <field name="model">api.group</field>
        <field name="arch" type="xml">
            <form string="Groups">
                <sheet>
                        <group>
                            <field name="name"/>
                            <field name="month_listeners"/>
                            <field name="artist_ids"/>
                            <field name="song_ids"/>
                        </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="group_kanban_view" model="ir.ui.view">
        <field name="name">api.group.kanban</field>
        <field name="model">api.group</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>Name:<strong><span><field name="name"/></span></strong>
                                    </li>
                                    <li>Month listeners:<field name="month_listeners"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="group_tree_view" model="ir.ui.view">
        <field name="name">api.group.tree</field>
        <field name="model">api.group</field>
        <field name="arch" type="xml">
            <tree string="Info about groups">
                <field name="name"/>
                <field name="month_listeners"/>
                <field name="artist_ids"/>
                <field name="song_ids"/>
            </tree>
        </field>
    </record>

    <menuitem
        id="song_root_item"
        name="Music"
        action="action_song"
        sequence="10"/>

    <menuitem
        id="group_root_item"
        name="Groups"
        action="group_action"
        parent="song_root_item"
        sequence="10"/>

    <menuitem
        id="artist_root_item"
        parent="song_root_item"
        name="Artists"
        action="artist_action"
        sequence="10"/>

    <menuitem
        id="album_root_item"
        parent="song_root_item"
        name="Albums"
        action="album_action"
        sequence="10"/>

    <menuitem
        id="wiz_group_root_item"
        parent="song_root_item"
        name="Load file"
        action="action_upload_file"
        sequence="10"/>

</odoo>
