<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="artist_action" model="ir.actions.act_window">
        <field name="name">Artists</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">artist</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="artist_form_view" model="ir.ui.view">
        <field name="name">artist.form</field>
        <field name="model">artist</field>
        <field name="arch" type="xml">
            <form string="Artists">
                <group>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="sex"/>
                    <field name="country_id"/>
                    <field name="month_listeners"/>
                    <field name="album_id"/>
                    <field name="song_id"/>
                    <field name="artist_group_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="artist_tree_view" model="ir.ui.view">
        <field name="name">artist.tree</field>
        <field name="model">artist</field>
        <field name="arch" type="xml">
            <tree string="Info about artists">
                <field name="name"/>
                <field name="age"/>
                <field name="sex"/>
                <field name="country_id"/>
                <field name="month_listeners"/>

                <field name="album_id"/>
                <field name="song_id"/>
                <field name="artist_group_id"/>
            </tree>
        </field>
    </record>

    <record id="artist_kanban_view" model="ir.ui.view">
        <field name="name">artist.kanban</field>
        <field name="model">artist</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>Name:<strong><span><field name="name"/></span></strong>
                                    </li>
                                    <li>Month listeners:<field name="month_listeners"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>