<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_action" model="ir.actions.act_window">
        <field name="name"> Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">group</field>
        <field name="view_mode">form,tree</field>
    </record>

    <record id="group_form_view" model="ir.ui.view">
        <field name="name">group.form</field>
        <field name="model">group</field>
        <field name="arch" type="xml">
            <form string="Groups">
                <sheet>
                        <group>
                            <field name="name"/>
                            <field name="month_listeners"/>
                            <field name="artist_id"/>
                            <field name="song_id"/>
                        </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem
        id="song_root_item"
        name="Music"
        action="action_song"
        sequence="10"/>

    <menuitem
        id="group_root_item"
        parent="song_root_item"
        name="Groups"
        action="group_action"
        sequence="10"/>

    <menuitem
        id="wiz_group_root_item"
        parent="song_root_item"
        name="Load file"
        action="action_upload_file"
        sequence="10"/>

</odoo>
