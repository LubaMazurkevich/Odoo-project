<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_song" model="ir.actions.act_window">
        <field name="name">Songs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">song</field>
        <field name="view_mode">form</field>
    </record>

    <record id="song_form_view" model="ir.ui.view">
        <field name="name">song.form</field>
        <field name="model">song</field>
        <field name="arch" type="xml">
            <form string="Songs">
                <group>
                    <field name="name"/>
                    <field name="listeners"/>
                    <field name="duration"/>
                    <field name="artist_id"/>
                    <field name="group_id"/>
                    <field name="album_id"/>
                </group>
            </form>
        </field>
    </record>

</odoo>